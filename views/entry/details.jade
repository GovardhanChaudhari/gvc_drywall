extends ../../layouts/account
block head
    title Entry Settings
block feet
    script(src='/views/entry/details.min.js?#{cacheBreaker}')
block body
    div.row
        div.col-xs-12
            div.page-header
                h1 Entry Settings
    div.row
        div.col-sm-9
            div#details
    script(type='text/template', id='tmpl-details')
        fieldset
          legend Entry Info
          div.alerts
            |<% _.each(errors, function(err) { %>
            div.alert.alert-danger.alert-dismissable
              |<%- err %>
            |<% }); %>
            |<% if (success) { %>
            div.alert.alert-info.alert-dismissable
              button.close(type='button', data-dismiss='alert') &times;
              | Changes have been saved.
            |<% } %>
          div.form-group(class!='<%- errfor.type ? "has-error" : "" %>')
            label Type:
            input.form-control(type='text', name='type', value!='<%- type %>')
            span.help-block <%- errfor.type %>
          div.form-group(class!='<%- errfor.amount ? "has-error" : "" %>')
            label Amount:
            input.form-control(type='text', name='amount', value!='<%- amount %>')
            span.help-block <%- errfor.amount %>
          div.form-group(class!='<%- errfor.description ? "has-error" : "" %>')
            label Description:
            input.form-control(type='text', name='description', value!='<%- description %>')
            span.help-block <%- errfor['description'] %>
          div.form-group
            button.btn.btn-primary.btn-update(type='button') Update
    script(type='text/template', id='data-record') !{data.record}

